<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"

           NavigationPage.HasNavigationBar="False"
     xmlns:bdEntry="clr-namespace:HappeningsApp.Custom"
             BackgroundColor="Black"
         xmlns:b="clr-namespace:HappeningsApp.Custom"    
             x:Class="HappeningsApp.Views.Collections" >
    <ContentPage.Content>
        
      <FlexLayout Direction="Column" 
                    AlignItems="Stretch" 
                    JustifyContent="SpaceEvenly" 
                    Margin="40" >
            <StackLayout>
                 <Button Text="My Messages" 
                      TextColor="White" 
                      BackgroundColor="{DynamicResource CrawlColor}" />
            
            </StackLayout>
            <StackLayout>
               <Button Text="My Favorites" TextColor="White" BackgroundColor="{DynamicResource CrawlColor}" />
               
            </StackLayout>
        </FlexLayout>


      
    </ContentPage.Content>
</ContentPage>