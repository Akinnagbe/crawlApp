<?xml version="1.0" encoding="UTF-8"?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms" 
                  xmlns:c="clr-namespace:HappeningsApp.Custom"
             BackgroundColor="Black"
              NavigationPage.HasNavigationBar="False"
             
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml" 
             x:Class="HappeningsApp.Views.test.MyPage">
    <ContentPage.Content>
        <ScrollView>

            <Grid RowSpacing="0" ColumnSpacing="0" >
                <Grid.RowDefinitions>
                    <RowDefinition Height="auto" />
                    <RowDefinition Height="auto" />
                    <RowDefinition Height="auto" />
                    <RowDefinition Height="auto" />
                    <RowDefinition Height="auto" />
                    <RowDefinition Height="auto" />

                </Grid.RowDefinitions>
                <StackLayout  HorizontalOptions="CenterAndExpand" VerticalOptions="CenterAndExpand" Grid.Row="0" >
                    <Image Source="Crawl_white_blue.png" HeightRequest="250"  />

                </StackLayout>
                <StackLayout Spacing="60"   VerticalOptions="CenterAndExpand" Grid.Row="1" Padding="40,0,40,0"  >

                    <StackLayout Spacing="5">
                        <c:BorderlessEntry Placeholder="Username"  
                                   IsSpellCheckEnabled="false"
                                    HorizontalTextAlignment="Start" 
                                       TextColor="White" 
                                       Text="{Binding User.Username}"
                                       PlaceholderColor="White"  />
                        <BoxView HeightRequest="2" BackgroundColor="{x:StaticResource CrawlColor}"   />
                    </StackLayout>
                    <StackLayout Spacing="0">
                        <StackLayout Spacing="5">
                            <c:BorderlessEntry Placeholder="Password" IsPassword="True"  
                                       IsSpellCheckEnabled="false"
                                    HorizontalTextAlignment="Start"  
                                       TextColor="White" 
                                       PlaceholderColor="White" 
                                       Text="{Binding User.Password}"
                                       />
                            <BoxView HeightRequest="2" BackgroundColor="{x:StaticResource CrawlColor}"  />

                        </StackLayout>

                        <StackLayout Margin="0,15,0,0" Orientation="Horizontal">
                            <Label Text="Dismiss" TextColor="White">
                                <Label.GestureRecognizers>
                                    <TapGestureRecognizer 
                                                      NumberOfTapsRequired="1" />
                                </Label.GestureRecognizers>
                            </Label>
                            <Label Text="Forgot Password?" 
                           TextColor="White" 
                           HorizontalOptions="EndAndExpand" 

                           />
                        </StackLayout>
                    </StackLayout>

                </StackLayout>

                <StackLayout Grid.Row="3" VerticalOptions="CenterAndExpand" HorizontalOptions="CenterAndExpand"  Margin="0,15,0,0">


                    <Button Text="Login" WidthRequest="300" x:Name="login" CornerRadius="23" 
                        BorderWidth="1"    BackgroundColor="{x:StaticResource CrawlColor}" 
                        TextColor="White" />



                </StackLayout>
                <StackLayout Grid.Row="4"  Margin="0,15,0,0">
                    <StackLayout>
                        <Label Text="Or Login with" HorizontalOptions="CenterAndExpand" TextColor="White" />
                    </StackLayout>
                    <StackLayout VerticalOptions="CenterAndExpand" HorizontalOptions="CenterAndExpand" >
                        <Button TextColor="White" WidthRequest="300" Text="Sign in with Facebook" CornerRadius="23" BackgroundColor="{x:StaticResource CrawlColor}" />
                        <Button TextColor="White" Text="Sign in with Google" WidthRequest="300" CornerRadius="23" BackgroundColor="#c0392b" />


                    </StackLayout>

                </StackLayout>
                <StackLayout Grid.Row="5" x:Name="EntryStack" >
                    <Entry ReturnType="Next" />



                </StackLayout>
            </Grid>
        </ScrollView>
    </ContentPage.Content>
</ContentPage>
