<?xml version="1.0" encoding="UTF-8"?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms" 
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml" 
             x:Class="HappeningsApp.Views.AppViews.DealsList"
             NavigationPage.HasNavigationBar="False"
             BackgroundColor="#000015"
             xmlns:ff="clr-namespace:FFImageLoading.Forms;assembly=FFImageLoading.Forms"
             >
    <ContentPage.Content>
     
        <Grid>

        <Label Text="Show Adverts" >
                <Label.GestureRecognizers>
                    <TapGestureRecognizer Tapped="Handle_Tapped" />
                </Label.GestureRecognizers>
                </Label>
            
               <ListView ItemsSource="{Binding dealsfromAPI}" x:Name="dealsListview" SeparatorVisibility="None" ItemTapped="dealsListview_ItemTapped" BackgroundColor="Transparent" HasUnevenRows="true">
            <ListView.ItemTemplate>
                <DataTemplate>
                        <ViewCell>
                            <Frame Padding="0" Margin="0,0,0,20" IsClippedToBounds="true" BackgroundColor="Transparent" HeightRequest="300" CornerRadius="0">
                                  
<!--                                    <Image Source="{Binding ImagePath}" Aspect="AspectFit" />-->
                                <ff:CachedImage Source="{Binding ImagePath}"/>
 
                                    <Label Text="{Binding Name}" TextColor="White" />
                                    <Label Text="{Binding Owner}" TextColor="White" />
                                </Frame>
                        </ViewCell>
                       
                </DataTemplate>
            </ListView.ItemTemplate>
        </ListView> 
        </Grid>
         

   
        
    </ContentPage.Content>
</ContentPage>
